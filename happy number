class Solution(object):
    def isHappy(self, n):
        """
        :type n: int
        :rtype: bool
        """
        sett=set()
        while n!= 1:
            if n in sett:
                return False
            sett.add(n)
            total=0
            for i in str(n):
                total+=int(i)**2
            n=total
        return True
