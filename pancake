class Solution:
    def pancakeSort(self, arr: List[int]) -> List[int]:
        res = []
        for x in range(len(arr), 1, -1):
            idx = arr.index(x)
            
            if idx == x - 1:
                continue
            
            if idx != 0:
                res.append(idx + 1)
                arr[:idx + 1] = arr[:idx + 1][::-1]
            
            res.append(x)
            arr[:x] = arr[:x][::-1]
            
        return res
